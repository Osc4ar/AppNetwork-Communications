package GUI;

import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JFrame;

/* This class allows two clients to interact each other sending
 * private messages, the messages won't be sended to the common chat
 * instead, they will have a personal window.
 */

public class Private extends JFrame implements ActionListener {

	private static final long serialVersionUID = 1L;

	public Private ( ) {
		
		super ( "Private Chat." );
		this.getContentPane ( ).setBackground ( Color.WHITE );
		
	} // End constructor.
	
	public void Components ( ) {
		
		setDefaultCloseOperation ( JFrame.EXIT_ON_CLOSE );
		setLocationRelativeTo ( null );
		setResizable ( false );
		setSize ( 400, 400 );
		setVisible ( true );
		setLayout ( null );
		Attributes ( );
		
	} // End Components. 
	
	public void Attributes ( ) {
		
	} // End Attributes.
	
	@Override
	public void actionPerformed(ActionEvent e) {
		
	} // End actionPerformed.

} // End class.
