package GUI;

import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JTextField;
import javax.swing.JButton;
import javax.swing.JDialog;

public class Init extends JDialog implements ActionListener {

	private static final long serialVersionUID = 1L;
	public static JTextField userName;
	public static JButton confirm;
	public static JButton cancel;
	
	public void Launch ( ) {
		 setDefaultCloseOperation ( JDialog.DISPOSE_ON_CLOSE );
		 setTitle ( "Log in" );
		 setLocationRelativeTo ( null );
		 setSize ( 400, 120 );
		 setVisible ( true );
		 setLayout ( null );
		 Components ( );
	} // End Launch.
	
	public void Components ( ) {
		/* Buttons. */
		confirm = new JButton ( "Confirm" );
		cancel = new JButton ( "Cancel" );
		/* TextField*/
		userName = new JTextField ( "Enter your user name..." );
		
		confirm.setBounds ( 20, 60, 95, 20 );
		cancel.setBounds( 135, 60, 95, 20 );
		userName.setBounds( 20, 20, 20, 380 );
		add ( userName );
		add ( confirm );
		add ( cancel );	
	} // End Components.
	
	@Override
	public void actionPerformed(ActionEvent e) {
		
	}

	
	
}
